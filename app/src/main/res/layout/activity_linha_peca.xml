<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgLinhaPeca"
        android:src="@mipmap/ic_wallpaper_black_24dp"
        android:layout_width="50dp"
        android:layout_height="50dp" />
    <TextView
        android:layout_toRightOf="@+id/imgLinhaPeca"
        android:id="@+id/nomeLinhaPeca"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@+id/imgLinhaPeca"
        android:layout_below="@+id/nomeLinhaPeca"
        android:id="@+id/marcaLinhaPeca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingRight="20dp"
        android:layout_below="@+id/nomeLinhaPeca"
        android:id="@+id/marcaLinhaCarro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>